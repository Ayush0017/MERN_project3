<% include adminheader %>


            <!-- About Start -->
            <div class="about wow fadeInUp" data-wow-delay="0.1s">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-12 col-md-12">
                            <div class="section-header text-left">
                            
    <h1>Edit Profile Here!!!</h1>
    <font color="blue"><%= output %></font>
    <form method="post" action="/admin/epadmin">
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name="name" value="<%= userDetails.name %>" >
        </div>
        <div class="form-group">
            <label>Username</label>
            <input type="email" class="form-control" name="email" value="<%= userDetails.email %>" readonly >
        </div>
        <div class="form-group">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" value="<%= userDetails.mobile %>" >
          </div>
        <div class="form-group">
            <label>Address</label>
            <textarea rows="5" class="form-control" name="address"><%= userDetails.address %></textarea>
        </div>
        <div class="form-group">
            <label>City</label>
            <select class="form-control" name="city">
            <option><%= userDetails.city %></option>
            <option>Indore</option>
            <option>Bhopal</option>
            <option>Ujjain</option>
            </select>
        </div>
        <div class="form-group">
            <label>Gender</label>
            Male <input type="radio"  name="gender" value="male" <%= m %> />
             &nbsp;&nbsp;
            Female <input type="radio"  name="gender" value="female" <%= f %> />
          </div>
        <button type="submit" class="btn btn-success">Update</button>
      </form>                                 
                            
                            
                                
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            <!-- About End -->

<% include adminfooter %>




